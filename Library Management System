package java_programs ;
import java.util.Scanner ;

public class Lms {
        public static void main(String[] args) {
            Library lib = new Library();
            Scanner input = new Scanner(System.in);
            int choice;
            do {
                System.out.println("\nLibrary Management System Menu:") ;
                System.out.println("2. \tAdd a User\t") ;
                System.out.println("1. \tAdd a Book\t") ;
                System.out.println("5. \tReturn a Book\t") ;
                System.out.println("3. \tDisplay Books\t") ;
                System.out.println("4. \tBorrow a Book\t") ;
                System.out.println("6. \tSearch Books by Title or Author\t");
                System.out.println("7. \tExit\t") ;
                System.out.print("\tPlease enter your choice: ") ;
                choice = input.nextInt() ;
                switch (choice) {
                    case 1:
                        lib.addBook();
                        break;
                    case 2:
                        lib.addUser(lib , input);
                        break;
                    case 3:
                        lib.displayBooks();
                        break;
                    case 4:
                        lib.borrowBooks(lib , input);
                        break;
                    case 5:
                        lib.returnBooks(lib , input);
                        break;
                    case 6:
                        lib.searchBookbyId(lib , input);
                        break;
                    case 7:
                        System.out.println("Exited!");
                        break;
                    default:
                        System.out.println("INVALID! Please enter a number between 1 and 7.");
                }
            } while (choice != 7);
            input.close();
        }
       
    }
